.container{
    display: flex;
    flex-direction:column;
    align-items: center;
    height:100vh;
    /* background-color:#b3d4db; */
}
.bColor{
  position: fixed;
  z-index: -1;
  top: 0;
  left: 0;
  width:100%;
  height:100vh;
}
.bColor image{
  width:100%;
  height:100%;
}
.avatar{
    width:200rpx;
    height:200rpx;
    margin-top:160rpx;
    border-radius:200rpx;
}

.motto{
    margin-top:100rpx;
    font-size:32rpx;
    font-weight: bold;
}

.journey-container{
    margin-top: 160rpx;
    border: 1px solid #405f80;
    box-shadow: 0px 0px 2px #fff;
    width: 200rpx;
    height: 80rpx;
    border-radius: 5px;
    text-align:center;
}

.journey{
    font-size:22rpx;
    font-weight: bold;
    line-height:80rpx;
    /* color: #405f80; */
    color:#fff;
}

page{
    height: 100%;
    background-color:#b3d4db;
